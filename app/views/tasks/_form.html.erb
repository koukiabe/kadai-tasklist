<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-md-6">
    <%= bootstrap_form_for(task) do |f| %>
      <% if task.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
    
      <%= f.text_field :status, label: "ステータス" %>
      
      <%= f.text_field :content, label: "タスク" %>
    
      
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>