<div class="row">
  <div class="col-xs-2">
    <% if users.any? %>
      <ul class="media-list">
        <% users.each do |user| %>
          <li class="media">
            <div class="media-body">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">＊ <%= user.name %></h3>
                </div>
                <div class="panel-body">
                  <p><%= link_to 'プロフィール', user_path(user) %></p>
                </div>
              </div>
          </li>
        <% end %>
      </ul>
      <%= paginate users %>
    <% end %>
  </div>
</div>